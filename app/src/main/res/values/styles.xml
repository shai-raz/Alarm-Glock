<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditorActivityTheme" parent="Theme.AppCompat.Light"/>

    <style name="EditorTextView" parent="Theme.AppCompat.Light">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/BodyTextView</item>
    </style>

    <style name="EditorSubtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/SubtitleTextView</item>
        <item name="android:alpha">.7</item>
    </style>

    <style name="EditorSetting">
        <item name="android:paddingTop">@dimen/editor_settings_layout_margin</item>
        <item name="android:paddingBottom">@dimen/editor_settings_layout_margin</item>
    </style>

    <style name="EditorButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">#fbfbfc</item>
    </style>

    <style name="AddTimeButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">56dp</item>
    </style>

    <style name="GroupEntryTime">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/BodyTextView</item>
        
    </style>

    <style name="GroupEntrySubtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/SubtitleTextView</item>
        <item name="android:alpha">.7</item>
    </style>

    <style name="GroupEntryDaysOfWeek">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/DayOfWeekText</item>
    </style>

    <style name="Times">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/TimesTextView</item>
    </style>

    <style name="GroupTimes">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/GroupTimesTextView</item>
    </style>

    <!-- Divider -->
    <style name="dividerBase">
        <item name="android:background">?android:attr/listDivider</item> //you can give your color here. that will change all divider color in your app.
    </style>

    <style name="dividerHorizontal" parent="dividerBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item> // You can change thickness here.

    </style>


    <!-- Style for Days in week ToggleButton -->
    <style name="DayInWeekToggleButton">
        <item name="android:background">@drawable/round_toggle_button</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>

        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/BodyTextView</item>
        <item name="android:alpha">.7</item>
    </style>

</resources>
